#!/usr/bin/env coffee

Trix = require('nez').objective 'Trix',

    nimbal: 'https://localhost:10101/'

    class: 'Configuration Distribution'

    category: 'Distributed Systems'

    description: """


        The source and destination components of a
        systems configuration distribution layer.



    """, (requirement) ->

        requirement.link 'requirements/distribute_ability'
        requirement.link 'requirements/upgrade_ability'
        requirement.link 'requirements/rollback_ability'
        requirement.link 'requirements/manage_ability'

